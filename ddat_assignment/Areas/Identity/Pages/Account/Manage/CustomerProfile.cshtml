@page
@model CustomerProfileModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="mb-4 text-2xl font-bold">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="flex">
    <!-- Sidebar -->
    <div class="w-1/4 border-r border-gray-300 bg-gray-100 p-4">
        <ul>
            <li class="mb-4">
                <button class="w-full rounded bg-gray-200 px-4 py-2 text-gray-800">Personal Information</button>
            </li>
            <li class="mb-4">
                <button class="w-full rounded px-4 py-2 text-gray-800">Identity Card</button>
            </li>
            <li class="mb-4">
                <button class="w-full rounded px-4 py-2 text-gray-800">License</button>
            </li>
            <li class="mb-4">
                <button class="w-full rounded px-4 py-2 text-gray-800">Working Preferences</button>
            </li>
            <li class="mb-4">
                <button class="w-full rounded px-4 py-2 text-gray-800">Emergency Contact</button>
            </li>
        </ul>
    </div>

    <!-- Form -->
    <div class="w-3/4 rounded bg-white p-6 shadow-md">
        <form id="profile-form" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="mb-4 text-red-500" role="alert"></div>

            <div class="grid-cols-2 grid gap-4">
                <div>
                    <label asp-for="Input.FirstName" class="mb-2 block text-sm font-bold text-gray-700">First Name</label>
                    <input asp-for="Input.FirstName" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" />
                </div>
                <div>
                    <label asp-for="Input.LastName" class="mb-2 block text-sm font-bold text-gray-700">Last Name</label>
                    <input asp-for="Input.LastName" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" />
                </div>
            </div>

            <div>
                <label asp-for="Input.Email" class="mb-2 block text-sm font-bold text-gray-700">Email</label>
                <input asp-for="Input.Email" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" />
            </div>

            <div>
                <label asp-for="Input.Password" class="mb-2 block text-sm font-bold text-gray-700">Password</label>
                <input asp-for="Input.Password" type="password" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" />
            </div>

            <div>
                <label asp-for="Input.ConfirmPassword" class="mb-2 block text-sm font-bold text-gray-700">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" />
            </div>

            <div>
                <label asp-for="Input.PhoneNumber" class="mb-2 block text-sm font-bold text-gray-700">Phone Number</label>
                <input asp-for="Input.PhoneNumber" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Input.PhoneNumber" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Input.Gender" class="mb-2 block text-sm font-bold text-gray-700">Gender</label>
                <div class="flex items-center">
                    <label class="mr-4 inline-flex items-center">
                        <input asp-for="Input.Gender" type="radio" value="Male" class="form-radio text-blue-600" />
                        <span class="ml-2">Male</span>
                    </label>
                    <label class="mr-4 inline-flex items-center">
                        <input asp-for="Input.Gender" type="radio" value="Female" class="form-radio text-blue-600" />
                        <span class="ml-2">Female</span>
                    </label>
                    <label class="inline-flex items-center">
                        <input asp-for="Input.Gender" type="radio" value="Other" class="form-radio text-blue-600" />
                        <span class="ml-2">Other</span>
                    </label>
                </div>
            </div>

            <div class="flex justify-end space-x-4">
                <button type="button" class="rounded bg-gray-300 px-4 py-2 text-gray-800">Cancel</button>
                <button type="submit" class="rounded bg-red-500 px-4 py-2 text-white">Save changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
