@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            showSection('personal-information');

            $('nav a.driver-profile').click(function (event) {
                event.preventDefault();

                $('nav a.driver-profile').removeClass('bg-gray-100 dark:text-white');
                $('nav a.driver-profile').addClass('dark:text-neutral-400 dark:hover:text-neutral-300');

                $(this).removeClass('dark:text-neutral-400 dark:hover:text-neutral-300');
                $(this).addClass('bg-gray-100 dark:text-white');

                var sectionId = $(this).attr('href').substring(1);
                $('.section').addClass('hidden');
                $('#' + sectionId).removeClass('hidden');
            });

            $('#editPwdButton').click(function () {
                $('#passwordContainer').toggle();
                var buttonText = ($('#passwordContainer').is(':visible')) ? 'Hide' : 'Edit';
                $(this).text(buttonText);
            });
        });

        function showSection(sectionId) {
            $('.section').addClass('hidden');
            $('#' + sectionId).removeClass('hidden');
        }
    </script>
}
