@model ShipmentSlotModel

@{
    ViewData["Title"] = "ShipmentSchedule";
    var error = TempData["error"];
}

<h1 class="scroll-m-20 pb-2 text-2xl font-semibold tracking-tight text-[#1d2129]">Shipment Schedule</h1>

@if (error != null)
{
    <div class="flex justify-center items-center my-8">
        <h4 class="text-ok-boss-6 text-lg">@error Please try again</h4>
    </div>
}
@if (Model != null) {
    <div class="my-4 py-2">
        <div class="flex flex-col gap-y-4 overflow-y-auto max-h-[80vh] pe-2 pb-8">
            <div class="flex flex-col">
                <div class="bg-ok-boss-2 rounded-t-lg p-4 text-ok-boss-8 text-sm">
                    Shipment slot details
                </div>
                <div class="bg-white rounded-b-lg p-4 flex flex-col gap-y-2">
                    <div class="text-ok-boss-8 font-semibold"># @Model?.ShipmentSlotId</div>
                    <div class="flex flex-row gap-x-2 items-center">
                        <svg class="text-ok-boss-4" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar-fold"><path d="M8 2v4" /><path d="M16 2v4" /><path d="M21 17V6a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h11Z" /><path d="M3 10h18" /><path d="M15 22v-4a2 2 0 0 1 2-2h4" /></svg>
                        <div class="text-sm text-[#4e5969]">@Model?.ShipmentDate?.ToString("dd MMMM yyyy")</div>
                    </div>
                    <div class="flex flex-row gap-x-2 items-center">
                        <svg class="text-ok-boss-4" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock-4"><circle cx="12" cy="12" r="10" /><polyline points="12 6 12 12 16 14" /></svg>
                        <div class="text-sm ">8.00 AM - 5.00 PM</div>
                    </div>
                </div>
            </div>
            <div class="flex flex-col">
                <div class="bg-ok-boss-2 rounded-t-lg p-4 text-ok-boss-8 text-sm">
                    Driver details
                </div>
                <div class="bg-white rounded-b-lg p-4">
                    <div class="flex flex-col gap-y-2">
                        <div class="flex flex-row items-center gap-x-2 text-sm">
                            <svg class="text-ok-boss-4" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-contact-round"><path d="M16 18a4 4 0 0 0-8 0" /><circle cx="12" cy="11" r="3" /><rect width="18" height="18" x="3" y="4" rx="2" /><line x1="8" x2="8" y1="2" y2="4" /><line x1="16" x2="16" y1="2" y2="4" /></svg>
                            @Model?.Driver?.User?.FullName
                        </div>
                        <div class="flex flex-row items-center gap-x-2 text-sm">
                            <svg class="text-ok-boss-4" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" /></svg>
                            @Model?.Driver?.User?.PhoneNumber
                        </div>
                        <div class="flex flex-row items-center gap-x-2 text-sm">
                            <svg class="text-ok-boss-4" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-car"><path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2" /><circle cx="7" cy="17" r="2" /><path d="M9 17h6" /><circle cx="17" cy="17" r="2" /></svg>
                            @Model?.Driver?.VehiclePlateNumber
                        </div>
                        <div class="flex flex-row items-center gap-x-2 text-sm">
                            <svg class="text-ok-boss-4" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z" /><circle cx="12" cy="10" r="3" /></svg>
                            @Model?.Driver?.PreferredWorkingLocation
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex flex-col gap-y-2">
                <div class="bg-ok-boss-2 rounded-lg p-4 text-ok-boss-8 text-sm">
                    Shipments
                </div>
                @foreach (var shipment in Model?.Shipments!)
                {
                    <partial name="_ShipmentCardPartial" model="shipment" />
                }
            </div>
        </div>
    </div>
}