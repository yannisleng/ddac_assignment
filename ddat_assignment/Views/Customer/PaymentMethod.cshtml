@{
    ViewData["Title"] = "PaymentMethod";
}

<h1>Invoice</h1>
<div class="mx-auto mt-8 max-w-md rounded-lg bg-white p-6 shadow-lg">
    <form asp-controller="Payment" asp-action="ProcessPayment" method="post">
        <div class="mb-4">
            <img src="~/images/credit_cards.png" alt="Credit Cards" class="mx-auto" />
        </div>
        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="card-number">Card number</label>
            <input name="card-number" type="text" placeholder="1234 5678 9012 3456" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" required />
        </div>
        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="name-on-card">Name on card</label>
            <input name="name-on-card" type="text" placeholder="Ex. John Website" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" required />
        </div>
        <div class="mb-4 flex">
            <div class="mr-2 w-1/2">
                <label class="mb-2 block text-sm font-bold text-gray-700" for="expiry-date">Expiry date</label>
                <input name="expiry-date" type="text" placeholder="01/19" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" required />
            </div>
            <div class="ml-2 w-1/2">
                <label class="mb-2 block text-sm font-bold text-gray-700" for="security-code">Security code</label>
                <input name="security-code" type="text" placeholder="•••" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" required />
            </div>
        </div>
        <div class="flex items-center justify-between">
            <button class="rounded bg-blue-500 px-4 py-2 font-bold text-white hover:bg-blue-700 focus:outline-none focus:shadow-outline" type="submit">
                Next
            </button>
        </div>
    </form>
</div>
