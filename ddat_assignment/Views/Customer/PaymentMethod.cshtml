@model PaymentMethodViewModel

@{
    ViewData["Title"] = "Payment Method";
}

<h1>Invoice</h1>
<div class="mx-auto mt-8 max-w-md rounded-lg bg-white p-6 shadow-lg">
    <form asp-controller="Payment" asp-action="ProcessPayment" method="post">
        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700">Shipment ID:</label>
            <p>@Model.ShipmentId</p>
        </div>
        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700">Shipment Fee:</label>
            <p>@Model.ShipmentFee</p>
        </div>
        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700">Payment Method:</label>
            <p>@Model.PaymentMethod</p>
        </div>
        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700">Parcel Name:</label>
            <p>@Model.ParcelName</p>
        </div>
        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700">Parcel Weight:</label>
            <p>@Model.ParcelWeight</p>
        </div>

        @if (Model.PaymentMethod == "Credit Card" || Model.PaymentMethod == "Debit Card")
        {
            <div class="mb-4">
                <img src="~/images/credit_cards.png" alt="Credit Cards" class="mx-auto" />
            </div>
            <div class="mb-4">
                <label class="mb-2 block text-sm font-bold text-gray-700" for="card-number">Card number</label>
                <input name="card-number" type="text" placeholder="1234 5678 9012 3456" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" required />
            </div>
            <div class="mb-4">
                <label class="mb-2 block text-sm font-bold text-gray-700" for="name-on-card">Name on card</label>
                <input name="name-on-card" type="text" placeholder="Ex. John Website" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" required />
            </div>
            <div class="mb-4 flex">
                <div class="mr-2 w-1/2">
                    <label class="mb-2 block text-sm font-bold text-gray-700" for="expiry-date">Expiry date</label>
                    <input name="expiry-date" type="text" placeholder="01/19" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" required />
                </div>
                <div class="ml-2 w-1/2">
                    <label class="mb-2 block text-sm font-bold text-gray-700" for="security-code">Security code</label>
                    <input name="security-code" type="password" placeholder="•••" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" required />
                </div>
            </div>
        }
        else if (Model.PaymentMethod == "Online Transfer")
        {
            <div class="mb-4">
                <label class="mb-2 block text-sm font-bold text-gray-700" for="bank-name">Recipient Bank Name</label>
                <input name="bank-name" type="text" placeholder="Ex. ABC Bank" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" readonly value="Your Bank Name" />
            </div>
            <div class="mb-4">
                <label class="mb-2 block text-sm font-bold text-gray-700" for="account-number">Account Number</label>
                <input name="account-number" type="text" placeholder="1234567890" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" readonly value="1234567890" />
            </div>
        }
        else if (Model.PaymentMethod == "E-wallet")
        {
            <div class="mb-4">
                <img src="~/images/QR_Code.svg" alt="QR Code" class="mx-auto" />
            </div>
        }

        <div class="flex items-center justify-between">
            <button class="rounded bg-blue-500 px-4 py-2 font-bold text-white hover:bg-blue-700 focus:outline-none focus:shadow-outline" type="submit">
                Next
            </button>
        </div>
    </form>
</div>
