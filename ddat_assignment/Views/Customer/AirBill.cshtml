@model AirBillViewModel

@{
    ViewData["Title"] = "Air Bill";
}

<link href="~/css/print.css" rel="stylesheet" />

<div id="airbill" class="airbill-container border-2 mx-auto my-2 max-w-xl rounded-lg border-gray-300 bg-white p-6">
    <div class="airbill-header border-b-2 mb-6 border-gray-300 pb-4 text-center">
        <h2 class="text-2xl font-bold">Order Details</h2>
    </div>
    
    <div class="airbill-section mb-6">
        <p class="mb-2"><strong>Ship By Date:</strong> @Model.Shipment.ShipmentDate.ToString("dd-MM-yyyy")</p>
        <p class="mb-2"><strong>Weight (kg):</strong> @Model.Shipment.Parcel?.Weight</p>
        <p class="mb-2"><strong>Shipment ID:</strong> @Model.Shipment.ShipmentId</p>
    </div>
    
    <div class="airbill-section mb-6">
        <h3 class="mb-4 border-b border-gray-300 pb-2 text-xl font-semibold">Sender Details</h3>
        <p class="mb-2"><strong>Name:</strong> @Model.SenderName</p>
        <p class="mb-2"><strong>Phone:</strong> @Model.SenderPhoneNumber</p>
        <p class="mb-2"><strong>Address:</strong> @Model.SenderAddress.Replace("||", ", ")</p>
    </div>
    
    <div class="airbill-section mb-6">
        <h3 class="mb-4 border-b border-gray-300 pb-2 text-xl font-semibold">Recipient Details</h3>
        <p class="mb-2"><strong>Name:</strong> @Model.Shipment.ReceiverName</p>
        <p class="mb-2"><strong>Phone:</strong> @Model.Shipment.ReceiverPhoneNumber</p>
        <p class="mb-2"><strong>Address:</strong> @Model.Shipment.DeliveryAddress.Replace("||", ", ")</p>
    </div>
    
    <div class="airbill-section mb-6">
        <h3 class="mb-4 border-b border-gray-300 pb-2 text-xl font-semibold">POD</h3>
        <p class="mb-2"><strong>Name:</strong></p>
        <p class="mb-2"><strong>I.C.:</strong></p>
        <p class="mb-2"><strong>Signature:</strong></p>
    </div>

    <div class="no-print airbill-footer mt-8 flex justify-between">
        <a href="@Url.Action("Index", "Home")" class="w-24 rounded bg-red-700 py-2 text-center text-white hover:bg-red-800">Home</a>
        <button onclick="window.print()" class="w-24 rounded bg-pink-500 py-2 text-center text-white hover:bg-pink-600">Print</button>
    </div>
</div>
